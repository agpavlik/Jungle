<header class="page-header">
<h2>Login</h2>
</header>

<%= form_tag '/login' do %>

  <% if flash[:error] %>
    <p class="error-message"><%= flash[:error] %></p>
  <% end %>
  <dl style="list-style-type:none">
    <dt>Email:</dt>
      <dd><%= text_field_tag :email %></dd>
    <dt>Password:</dt>
      <dd><%= password_field_tag :password %></dd>
    <dt><%= submit_tag "Submit", class: 'btn btn-success' %></dt>
  </dl>

<% end %>